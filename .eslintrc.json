{
    "plugins": [
        "jest",
        "@typescript-eslint"
    ],
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "semistandard",
        "plugin:@typescript-eslint/recommended",
        "plugin:jest/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "tsconfig.json"
    },
    "rules": {
        "brace-style": ["error", "1tbs", { "allowSingleLine": false }],
        "curly": ["error", "all"],
        "no-console": "error"
    }
}
